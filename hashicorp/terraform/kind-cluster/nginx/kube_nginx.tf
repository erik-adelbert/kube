
module "kind_cluster" {
  source = "../kind_cluster"
}

provider "kubernetes" {
  host = module.create.kind_cluster_endpoint

  cluster_ca_certificate = module.create.kind_cluster_cluster_ca_certificate
  client_certificate     = module.create.kind_cluster_client_certificate
  client_key             = module.create.kind_cluster_client_key
}


resource "kubernetes_deployment" "nginx" {
  depends_on = [kind_cluster.default]

  metadata {
    name = "scalable-nginx-example"
    labels = {
      App = "ScalableNginxExample"
    }
  }

  spec {
    replicas = 4
    selector {
      match_labels = {
        App = "ScalableNginxExample"
      }
    }
    template {
      metadata {
        labels = {
          App = "ScalableNginxExample"
        }
      }
      spec {
        container {
          image = "nginx:1.25.4"
          name  = "nginx1254"

          port {
            container_port = 80
          }

          resources {
            limits = {
              cpu    = "500m"
              memory = "512Mi"
            }
            requests = {
              cpu    = "250m"
              memory = "50Mi"
            }
          }
        }
      }
    }
  }
}

resource "kubernetes_service" "nginx" {
  metadata {
    name = "nginx-example"
  }
  spec {
    selector = {
      App = kubernetes_deployment.nginx.spec.0.template.0.metadata[0].labels.App
    }
    port {
      node_port   = 30201
      port        = 80
      target_port = 80
    }
    type = "NodePort"
  }
}
